#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>

#define WIN 1
#define SYMBOLS 2
#define NUMBERS 18
#define NAV 4
#define FUNCTION 5
#define BLUETOOTH 6
#define MOUSE 7
#define CLICK 8
#define SCRL 9
#define BIRO 10

/ {
  split_inputs {
    #address-cells = <1>;
    #size-cells = <0>;

    trackball_split: trackball_split@0 {
      compatible = "zmk,input-split";
      reg = <0>;
    };
    trackball_split2: trackball_split2@1 {
      compatible = "zmk,input-split";
      reg = <1>;
    };
  };

  // 右手：デフォルトでカーソル移動（90度反時計回り補正）
  trackball_listener: trackball_listener {
    compatible = "zmk,input-listener";
    status = "disabled";
    device = <&trackball_split>;
    input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP)>;
    scroll {
      layers = <1 2>;  // layer_1 と layer_2 でスクロール
      input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP)>, <&zip_xy_scaler 1 15>, <&zip_xy_to_scroll_mapper>;
    };
  };

  // 左手：レイヤー別スクロール方向切り替え
  trackball_listener2: trackball_listener2 {
    compatible = "zmk,input-listener";
    status = "disabled";
    device = <&trackball_split2>;
    
    // デフォルト（レイヤー0）：縦スクロール
    input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_Y_INVERT)>, <&zip_xy_scaler 1 15>, <&zip_xy_to_scroll_mapper>;
    
    // レイヤー1：縦スクロール（デフォルトと同じ）
    scroll {
      layers = <1>;
      input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_Y_INVERT)>, <&zip_xy_scaler 1 15>, <&zip_xy_to_scroll_mapper>;
    };
    
    // レイヤー2：超精密縦スクロール（拡大縮小用）
    zoom_scroll {
      layers = <2>;
      input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_Y_INVERT)>, <&zip_xy_scaler 1 50>, <&zip_xy_to_scroll_mapper>;
    };
  };
};
