/*
 * ═══════════════════════════════════════════════════════════════
 *                           COMBO KEYS
 * ═══════════════════════════════════════════════════════════════
 * キー位置参考:
 *   Q(0)  W(1)  E(2)  R(3)  T(4)     Y(5)  U(6)  I(7)  O(8)  P(9)
 *   A(10) S(11) D(12) F(13) G(14)    H(15) J(16) K(17) L(18) ;(19)
 *   Z(20) X(21) C(22) V(23) B(24)    N(25) M(26) ,(27) .(28) /(29)
 */

// ═══════════════════════════════════════════════════════════════
//                        COMBO設定値
// ═══════════════════════════════════════════════════════════════

#define COMBO_TIMEOUT 50      // 基本タイムアウト（ms）

/ {
    combos {
        compatible = "zmk,combos";
        
        // ──────────────────────────────────────────────────────────
        // ナビゲーション系
        // ──────────────────────────────────────────────────────────
        
        // Q + W → ESC
        combo_esc {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
            layers = <1>;  // Layer 1でのみ有効
        };
        // A + S → TAB
        combo_tab {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <20 21>;
            bindings = <&kp TAB>;
            layers = <1>;  // Layer 1でのみ有効
        };
        // Z + X → WIN
        combo_win {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <10 11>;
            bindings = <&kp LWIN>;
            layers = <1>;  // Layer 1でのみ有効
        };
        // O + P → DELETE（前方削除）
        combo_del {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <8 9>;
            bindings = <&kp DELETE>;
            layers = <1>;  // Layer 1でのみ有効
        };
        // L + ; → 半角全角切り替え（COMBO_TIMEOUT）
        combo_hankaku {
            timeout-ms = <50>;
            key-positions = <18 19>;
            bindings = <&kp LA(GRAVE)>;
            layers = <1>;  // Layer 1でのみ有効
        };
        // 左クリック + 右クリック → 中央クリック
        combo_middle {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <27 28>;
            bindings = <&mkp MCLK>;
            layers = <1>;  // Layer 1でのみ有効
        };
        // 右下二つ
        combo_middle_shift {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <28 29>;
            bindings = <&kp LS(MCLK)>;
            layers = <1>;  // Layer 1でのみ有効
        };
        };
};
