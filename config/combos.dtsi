/*
 * ═══════════════════════════════════════════════════════════════
 *                           COMBO KEYS
 * ═══════════════════════════════════════════════════════════════
 * キー位置参考:
 *   Q(0)  W(1)  E(2)  R(3)  T(4)     Y(5)  U(6)  I(7)  O(8)  P(9)
 *   A(10) S(11) D(12) F(13) G(14)    H(15) J(16) K(17) L(18) ;(19)
 *   Z(20) X(21) C(22) V(23) B(24)    N(25) M(26) ,(27) .(28) /(29)
 */

/ {
    combos {
        compatible = "zmk,combos";
        
        // ──────────────────────────────────────────────────────────
        // ナビゲーション系
        // ──────────────────────────────────────────────────────────
        
        // Q + W → ESC
        combo_esc {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };
        
        // A + S → TAB
        combo_tab {
            timeout-ms = <50>;
            key-positions = <10 11>;
            bindings = <&kp TAB>;
        };
        
        // ──────────────────────────────────────────────────────────
        // 削除系
        // ──────────────────────────────────────────────────────────
        
        // O + P → DELETE（前方削除）
        combo_delete {
            timeout-ms = <50>;
            key-positions = <8 9>;
            bindings = <&kp DELETE>;
        };
        
        // ──────────────────────────────────────────────────────────
        // IME切り替え系
        // ──────────────────────────────────────────────────────────
        
        // F + J → 半角全角切り替え（Alt + `）
        combo_ime_toggle {
            timeout-ms = <50>;
            key-positions = <13 16>;
            bindings = <&kp LA(GRAVE)>;
        };
        
        // ──────────────────────────────────────────────────────────
        // マウス操作系（Layer 2で有効）
        // ──────────────────────────────────────────────────────────
        
        // 左クリック + 右クリック → 中央クリック
        combo_middle_click {
            timeout-ms = <50>;
            key-positions = <25 26>;
            bindings = <&mkp MCLK>;
            layers = <2>;  // Layer 2でのみ有効
        };
        
        // ──────────────────────────────────────────────────────────
        // 編集系（今後追加用）
        // ──────────────────────────────────────────────────────────
        
        // 例：K + L → Enter
        // combo_enter {
        //     timeout-ms = <50>;
        //     key-positions = <17 18>;
        //     bindings = <&kp ENTER>;
        // };
        
        // ──────────────────────────────────────────────────────────
        // その他（今後追加用）
        // ──────────────────────────────────────────────────────────
        
        // 例：Space + Backspace → 何かの機能
        // combo_custom {
        //     timeout-ms = <50>;
        //     key-positions = <位置1 位置2>;
        //     bindings = <&kp キーコード>;
        // };
    };
};
